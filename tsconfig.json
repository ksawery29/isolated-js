{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "Node",
        "outDir": "dist",
        "allowSyntheticDefaultImports": true,
        "declaration": true,
        "strict": true,
        "lib": [
            "es2022",
            "dom",
            "dom.iterable"
        ],
        "noEmit": true,
        "moduleDetection": "force",
        "paths": {
            "isolated-js/*": [
                "./dist/*"
            ]
        },
    },
    "exclude": [
        "node_modules",
        "dist",
        "docs"
    ]
}